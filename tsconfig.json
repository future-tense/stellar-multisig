{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,

    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationDir": "lib/types",
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "stripInternal": true,
    "sourceMap": false,
    "target": "es2017",
    "outDir": "lib",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": [
      "es6",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
